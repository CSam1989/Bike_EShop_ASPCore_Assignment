@model Bike_EShop.Application.Products.Commands.Upsert.UpsertProductCommand;
@{
    ViewData["Title"] = "Update";
}

<h1>Update <span id="title">@Model.Name</span></h1>
<hr />
<div class="row">
    <div class="col-md-6 col-12">
        <form asp-action="SaveUpdate">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" oninput="changeTitleFromInput(this.value)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BikeRegistrationNumber" class="control-label"></label>
                <input asp-for="BikeRegistrationNumber" class="form-control" />
                <span asp-validation-for="BikeRegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-secondary" />
                <a asp-action="AdminIndex">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_Scripts"); }
}

